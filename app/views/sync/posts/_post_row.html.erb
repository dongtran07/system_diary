
<li class="time-label">
  <span class="<%= post.type.bg_class%>">Posted in : <%= post.type.name%>: <%= post.user.name%></span>
  <br />
  <br />
</li>

<li class="time-label">
   <span class="bg-teal"><%= post.created_at.strftime("%d-%m-%Y")%></span>
</li>

<li>
  <i class="<%= post.type.class_icon%> <%= post.type.bg_class%>"></i>
  <div class="timeline-item">
    <span class="time"><i class="fa fa-clock-o"></i>&nbsp;<%= post.created_at.strftime("%H:%M")%></span>
    <h3 class="timeline-header"><%=link_to post.content_header, post%></h3>
    <div class="index-box-body">
      <%= simple_format(post.content) %>
    </div>
    <div class='timeline-footer'>                                                                            
      <a class="btn btn-default btn-xs">by: <%= post.user.name%></a> 
      <a class="btn <%= post.type.bg_class%> btn-xs"><%= post.type.name%></a>
      <a class="btn btn-info btn-xs"><%= post.page_view%> Views</a>  
      <a class="btn btn-warning btn-xs"> <%=post.comment_threads.count%> Comment</a>
      <%=link_to "Read More...", post, class:"btn btn-danger btn-xs"%>
    </div>
  </div>
</li>