<div class="well comment-form">
    <h4>Leave a Comment:</h4>
    <%= simple_form_for comment,:remote => true do |f| %>
        <div class="form-group">
            <%= f.text_area :body, class:"form-control",id: "cecix",rows:"3" %>
        </div>
        <%= f.input :commentable_id, :as => :hidden, :value => comment.commentable_id %>
        <%= f.input :commentable_type, :as => :hidden, :value => comment.commentable_type %>
        <%= f.submit :submit, :class => "btn btn-primary", :disable_with => "Submittingâ€¦"%>
    <%end%>
</div>
<hr>